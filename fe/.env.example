# API Configuration
VITE_API_URL=http://localhost:3000
VITE_API_BASE_PATH=/sabalong

# App Configuration
VITE_APP_NAME=SABALONG
VITE_APP_TITLE=Sistem Aplikasi Bantuan Online

# Feature Flags (optional - untuk enable/disable fitur tertentu)
VITE_ENABLE_FEEDBACK=true
VITE_ENABLE_SLA_TRACKING=true

# Upload Configuration (optional - jika ada limit size)
VITE_MAX_FILE_SIZE=5242880
# 5MB in bytes (5 * 1024 * 1024)

# Environment
VITE_ENV=development
# Options: development, staging, production
